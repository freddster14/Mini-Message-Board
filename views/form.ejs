<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/form.css">
    <title>Add Note</title>
  </head>
  <body>
    <form method="POST" action="/new" class="note" name="form">
      <h2>Create your message</h2>
      <label for="name">Name:</label>
      <input type="text" name="messageUser" id="name" maxlength="10" required>
      <label for="message">Message:</label>
      <textarea name="messageText" id="message" maxlength="125" required></textarea>
      <input type="hidden" name="noteColor" id="noteColor" value="0">
      <button type="submit">SUBMIT</button>
    </form>
    <div class="colors">
      <% for (let i = 0; i < 4; i++) { %>
        <button onclick="changeColor(<%= i %>)" id="color<%= i %>" class="color"></button>
      <% } %>
    </div>
  </body>
  <script>
    function changeColor(i) {
      document.querySelector(".note").id = `color${i}`;
      document.querySelector("#noteColor").value = i;
    }
  </script>
</html>
