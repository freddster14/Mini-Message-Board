<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/index.css">
  </head>
  <body>
    <div class="content">
      <% for (let message of messages) { %>
        <div class="note">
          <h2><%= message.user %></h2>
          <p><%= message.text %></p>
          <a href="open/<%= messages.indexOf(message) %>">Open message</a>
        </div>
      <% } %>
    <a href="/new">Add Message</a>
    </div>
