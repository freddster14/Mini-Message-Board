<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/index.css">
  </head>
  <body>
    <div class="content">
      <% for (let i = messages.length - 1; i > 0; i--) { %>
        <a href="open/<%= messages.indexOf(i) %>">
          <div class="note" onclick="">
            <h2><%= messages[i].user %></h2>
            <p><%= messages[i].text %></p>
          </div>
        </a>
      <% } %>
    <a href="/new">Add Message</a>
    </div>
    <p class="thanks">Image by 
      <a href="https://pixabay.com/users/geralt-9301/?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=102071"> 
        Gerd Altmann</a> 
        from 
      <a href="https://pixabay.com//?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=102071"> 
        Pixabay</a>
    </p>
  </body>
</html>